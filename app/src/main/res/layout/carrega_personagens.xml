<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252F6B">

        <RelativeLayout
            android:id="@+id/lstPersonagens"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPersongens"
                android:layout_centerVertical="true"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:layout_toStartOf="@+id/imgPersonagens"
                android:text="Aqua Man"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_toLeftOf="@+id/imgPersonagens"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgPersonagens"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:src="@drawable/logo_aquaman"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp"/>

        </RelativeLayout>


</RelativeLayout>